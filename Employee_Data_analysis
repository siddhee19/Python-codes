# Import pandas for data manipulation and numpy for numerical operations
import pandas as pd
import numpy as np

# Read Excel file into a pandas DataFrame
Data_emp = pd.read_excel("EMPLOYEE_DATA (1).xlsx")

# Print the full employee dataset
print(Data_emp)

# Filter rows where department is "DATA ANALYST"
Data_emp1 = Data_emp[Data_emp['EMP_DEPARTMENT'] == 'DATA ANALYST']

# Print filtered dataset
print(Data_emp1)

# Display data types of each column
Data_emp.dtypes

# Display dataset info: columns, non-null count, memory usage
Data_emp.info()

# Create a simple pandas Series
s = pd.Series([1, 2, 3])

# Print the Series
print(s)

# Read Excel file again into a new DataFrame (duplicate step)
df = pd.read_excel("EMPLOYEE_DATA (1).xlsx")

# Print the DataFrame
print(df)

# Create a pivot table:
# - Index by department
# - Use salary column
# - Calculate count, sum, and mean salary per department
pivot = pd.pivot_table(
    df,
    index="EMP_DEPARTMENT",
    values="EMP_SALARY",
    aggfunc=['count', 'sum', 'mean']
)

# Print pivot table result
print(pivot)
